<center><h1>Search a class</h1></center>
<div class="row">

  <%= label_tag :name, nil, class: "display-none" %>
  <%= form_tag('/reviews/search', class: 'navbar-search pull-left') do %>  
    <%= text_field_tag :name, nil, class: 'search-query' %> 
    <%= javascript_include_tag "typeahead.js" %>
    <script>
      $(".search-query").typeahead({
        name: 'random',
        prefetch: {
          url: '/reviews.json',
          ttl: 0
        }
       });

      
    </script>
    <%= submit_tag "Find class", class: "btn btn-default" %>
    <% end %>
    <%= link_to 'New Review', new_review_path, class: "btn btn-default new-review" %>

</div>

<div class="space">
</div>


    
    
