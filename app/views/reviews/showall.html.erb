<table>
  <tr>
    <th>Name</th>
    <th>Stress level</th>
    <th>Hours spent</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr> 

<% @reviewnames.each do |review| %>
  <tr>
    <td><%= link_to review, { controller: "reviews", action: "search", name: review }, class: "no-change-link" %></td>
    <td><%= Review.where(name: review).average(:stress_level).round(2) %></td>
    <td><%= Review.where(name: review).average(:hours_spent).round(2) %></td>
    <td><%= Review.where(name: review).average(:value).round(2) %></td>
    <td><%= link_to 'Add Review', "/reviews/new" %></td>
  </tr>
<% end %>
</table>